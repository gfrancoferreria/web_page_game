						/******  ESTILO PESTAÑAS  ******/

/* estilo del fondo de las pestañas */
.tab {
  display: inline-block;
  overflow: center;
  border: 5px solid #2307C2;
  background-color: #2307C2;
  margin-left: auto;
  margin-right: auto;
  display: block;
}

/* estilo botón de pestaña seleccionada */
.tab button {
  font-size: 50px solid #000000;
  background-color: #C9B8E9;
  color: #000000;
  float: center;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 15px 22px;
  transition: 0.3s;
  
}

/* color botón al pasar el ratón por encima */
.tab button:hover {
  background-color: #CAE4EA;
}

/* color específico pestaña seleccionada */
.tab button.active {
  background-color: #995FD4;
}

/* Style the tab content */
.tabcontent {
  display: none;
  padding: 6px 12px;
  border: 0px solid;
  border-top: none;
  animation: fadeEffect 1s; /* Fading effect takes 1 second */
}
@keyframes fadeEffect {
  from {opacity: 0;}
  to {opacity: 1;}
}


